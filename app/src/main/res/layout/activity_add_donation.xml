<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@drawable/profile_header_background"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Back"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-3dp"
            android:text="Menambah Tempat Donasi"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:fontFamily="@font/poppins_bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/gambar_buat_donasi"
            android:scaleType="centerCrop"
            android:contentDescription="Gambar Donasi"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/profile_header_background"
            android:padding="16dp"
            android:text="Ayok Buat Donasi Untuk Organisasi Anda...\nLengkapi Deskripsi Di bawah Ini Okeyy..."
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_bold"
            android:gravity="start"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Donasi"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginTop="12dp"/>
            <EditText
                android:id="@+id/nama_donasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nama Donasi"
                android:background="@drawable/edit_text_background"
                android:padding="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jenis Donasi"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginTop="12dp"/>
            <Spinner
                android:id="@+id/jenis_donasi_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_background"
                android:padding="12dp"/>
            <EditText
                android:id="@+id/jenis_donasi_lainnya"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Jenis Donasi Lainnya"
                android:background="@drawable/edit_text_background"
                android:padding="12dp"
                android:visibility="gone"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tanggal Mulai"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginTop="12dp"/>
            <EditText
                android:id="@+id/tanggal_mulai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tanggal Mulai"
                android:background="@drawable/edit_text_background"
                android:padding="12dp"
                android:focusable="false"
                android:clickable="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tanggal Selesai"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginTop="12dp"/>
            <EditText
                android:id="@+id/tanggal_selesai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tanggal Selesai"
                android:background="@drawable/edit_text_background"
                android:padding="12dp"
                android:focusable="false"
                android:clickable="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deskripsi Donasi"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginTop="12dp"/>
            <EditText
                android:id="@+id/deskripsi_donasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Deskripsi Donasi Ini..."
                android:background="@drawable/edit_text_background"
                android:padding="12dp"
                android:minHeight="100dp"
                android:gravity="top|start"/>

            <LinearLayout
                android:id="@+id/upload_image_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_upload"
                android:gravity="center"
                android:padding="16dp"
                android:layout_marginTop="8dp">

                <ImageView
                    android:id="@+id/image_view"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_upload_donasi"
                    android:contentDescription="Upload Gambar"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload Gambar"
                    android:textColor="#757575"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <Button
                android:id="@+id/add_donation_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Buat Donasi"
                android:backgroundTint="@color/blue"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
