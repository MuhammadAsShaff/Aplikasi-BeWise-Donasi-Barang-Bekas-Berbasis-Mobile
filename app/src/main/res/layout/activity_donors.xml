<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <!-- Header dengan Search Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/profile_header_background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="24dp">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:contentDescription="Back"
            android:focusable="true"
            android:src="@drawable/ic_arrow_back" />

        <EditText
            android:id="@+id/search_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="-6dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_corner_background_home"
            android:drawablePadding="8dp"
            android:fontFamily="@font/poppins_regular"
            android:hint="Cari Donasi Yang Sudah Ada"
            android:inputType="text"
            android:paddingLeft="12dp"
            android:paddingTop="10dp"
            android:paddingBottom="8dp"
            android:textColorHint="#757575"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- List Pendonatur -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <LinearLayout
            android:id="@+id/donor_list_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Card Pendonatur -->
            <include layout="@layout/item_card_donor"/>
            <include layout="@layout/item_card_donor"/>
            <include layout="@layout/item_card_donor"/>
            <!-- Tambahkan sebanyak yang diperlukan -->
        </LinearLayout>
    </ScrollView>
</LinearLayout>
