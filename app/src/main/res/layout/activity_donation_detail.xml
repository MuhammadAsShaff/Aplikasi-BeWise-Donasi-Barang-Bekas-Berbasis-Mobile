<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <!-- Header dengan Back Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@drawable/profile_header_background"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Back"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-3dp"
            android:text="Rincian Donasi"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:fontFamily="@font/poppins_bold"/>
    </LinearLayout>

    <!-- Konten yang dapat di-scroll -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Gambar Donasi -->
            <ImageView
                android:id="@+id/donation_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:contentDescription="Donation Image"/>

            <!-- Detail Donasi -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="16dp">

                <TextView
                    android:id="@+id/nama_donasi_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ayo berbagi pakaian yang layak pakai"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_marginBottom="4dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/tempat_donasi_text_view"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Panti Asuhan Ujung Jalan"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="18sp"
                        android:fontFamily="@font/poppins_regular"/>

                    <TextView
                        android:id="@+id/sisa_hari_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sisa Hari 58"
                        android:textColor="@color/blue"
                        android:textSize="18sp"
                        android:fontFamily="@font/poppins_bold"
                        android:layout_gravity="end"/>
                </LinearLayout>

                <!-- Progress Bar -->
                <ProgressBar
                    android:id="@+id/progress_bar"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:progressDrawable="@drawable/progress_bar"
                    android:layout_marginBottom="16dp"/>

                <!-- Judul Deskripsi -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Deskripsi:"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/deskripsi_donasi_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mari kita berbagi kebahagiaan dengan memberikan pakaian yang layak pakai kepada saudara-saudara kita yang membutuhkan. Pakaian yang Anda sumbangkan akan sangat berarti bagi mereka yang kurang mampu. Bersama-sama, kita bisa membuat perbedaan."
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginBottom="16dp"
                    android:justificationMode="inter_word"/>

                <!-- Map Fragment -->
                <FrameLayout
                    android:id="@+id/map_fragment_container"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="8dp">
                    <fragment
                        android:id="@+id/map"
                        android:name="com.google.android.gms.maps.SupportMapFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </FrameLayout>

                <!-- Judul Pelaporan -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pelaporan:"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_marginBottom="4dp" />

                <!-- Inputan Pelaporan -->
                <EditText
                    android:id="@+id/pelaporan_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:hint="Laporkan Penggunaan Dana KeDonatur"
                    android:background="@drawable/edit_text_background"
                    android:padding="12dp"
                    android:gravity="top|start"
                    android:inputType="textMultiLine"
                    android:minHeight="100dp"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="16dp"/>

                <Button
                    android:id="@+id/kirim_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kirim"
                    android:backgroundTint="@color/blue"
                    android:textColor="@android:color/white"
                    android:textAllCaps="false"
                    android:fontFamily="@font/poppins_bold"
                    android:padding="12dp"
                    android:layout_marginBottom="16dp"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
